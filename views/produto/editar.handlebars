<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper" style="max-width: 600px; margin: auto;">
            <div class="table-title">
                <div class="row">
                    <div class="col-mb-3">
                        <h4>Editar Produto</h4>
                    </div>
                </div>
            </div>

            <form action="/produto/editarPost" method="POST">
                <input type="hidden" name="id" value={{produto.id}}>
            <div class="form-control">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome Produto</label>
                    <input type="text" class="form-control" name="nome" value="{{produto.nome}}">
                </div>
                <!--
                <div class="mb-3">
                    <label for="unidade" class="form-label">Unidade de Medida</label>
                    <input type="text" class="form-control" name="unidade" value="{{produto.unidade}}">
                </div>
                -->
                <div class="mb-3">
                    <label for="valor_unitario" class="form-label">Valor por Kg</label>
                    <input type="number" step="0.01" class="form-control" name="valor_unitario" value="{{produto.valor_unitario}}">
                </div>
                <center>
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill"></i> Salvar</button>
                <a href="/produto" class="btn btn-danger"><i class="bi bi-x-circle-fill"></i> Cancelar</a>
                </center>
            </div>
            </form>
        </div>
    </div>
</div>