<div class="container text-center">
  <div class="row" style="margin-top: 10px;">
    <div class="col">
        <div class="card text-bg-success" style="margin: 5px 5px 5px 5px">
            <h6 class="card-header">Vendas Dia</h6>
            <div class="card-body">
                <h5 class="card-title">R${{vendasDia}}</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-success" style="margin: 5px 5px 5px 5px">
            <h6 class="card-header">Vendas Mês</h6>
            <div class="card-body">
                <h5 class="card-title">R${{vendasMes}}</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-success" style="margin: 5px 5px 5px 5px">
            <h6 class="card-header">N° de Intermediários</h6>
            <div class="card-body">
                <h5 class="card-title">{{qtdIntermediarios}}</h5>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-success" style="margin: 5px 5px 5px 5px">
            <h6 class="card-header">Quantidade de Produtos</h6>
            <div class="card-body">
                <h5 class="card-title">{{qtdProdutos}}</h5>
            </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
        <div class="card" style="margin: 5px 5px 5px 5px">
          <div class="card-body">
            <canvas id="chartVendas" style="width:95%; margin: auto"></canvas>
          </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card" style="margin: 5px 5px 5px 5px">
          <div class="card-body">
            <canvas id="chartProdutos" style="width:95%; margin: auto"></canvas>
          </div>
        </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>


<script>
var xValues = [
{{#each vendas5Meses}}
    "{{this.MES}}/{{this.ANO}}",
{{/each}}
];
var yValues = [
{{#each vendas5Meses}}
    {{this.VALOR}},
{{/each}}
];
var barColors = ["green", "blue","red","orange","brown"];

new Chart("chartVendas", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Vendas dos últimos meses"
    }
  }
});
</script>


<script>
var xValues = [
{{#each vendasProdutos}}
    "{{this.nome_produto}}",
{{/each}}
];
var yValues = [
{{#each vendasProdutos}}
    {{this.VALOR}},
{{/each}}
];
var barColors = [
  "#198754",
  "#19871b",
  "#15bd39",
  "#065c06",
  "#64d955"
];

new Chart("chartProdutos", {
  type: "doughnut",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {position : 'bottom'},
    title: {
      display: true,
      text: "Vendas por produto"
    }
  }
});
</script>